<% if signed_in? %>
	<script type="text/javascript">
		window.location.href = "<%= root_path %>"  // put your correct path in a string here
	</script>
<% end %>

<% provide(:title, 'Registro') %>
<h1>Registro</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>
			
			<%= f.label :name, "Nombre" %>
			<%= f.text_field :name %>
			
			<%= f.label :email, "Email" %>
			<%= f.text_field :email %>
			
			<%= f.label :password, "Password" %>
			<%= f.password_field :password %>
			
			<%= f.label :password_confirmation, "ConfirmaciÃ³n" %>
			<%= f.password_field :password_confirmation %>
			
			<%= f.label :humanizer_answer, @user.humanizer_question %>
			<%= f.text_field :humanizer_answer %>
			
			<%= f.submit "Crear mi cuenta", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
	
	
