<% if signed_in? %>
	<script type="text/javascript">
		window.location.href = "<%= root_path %>"  // put your correct path in a string here
	</script>
<% end %>

<% provide(:title, 'Iniciar sesión') %>
<h1>Iniciar sesión</h1>
<p> <%= root_path %> </p>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(:session, url: sessions_path) do |f| %>
			<%= f.label :email %>
			<%= f.text_field :email %>
			
			<%= f.label :password %>
			<%= f.password_field :password %>
			
			<%= f.submit "Iniciar Sesión", class: "btn btn-large btn-primary" %>
		<% end %>
		
		<p>¿Usuario nuevo? <%= link_to "¡Crear cuenta!", registro_path %></p>
	</div> 
</div>
